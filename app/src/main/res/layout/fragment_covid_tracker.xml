<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.covidTracker.covidTracker_fragment"
    android:background="@color/card_background">


    <LinearLayout
        android:id="@+id/l_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/coronavirus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVID"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:textColor="@color/text_color"/>

        </LinearLayout>

        <TextView
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Cases Of India"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            android:layout_margin="5dp"
            app:contentPadding="4dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Confirmed Cases"
                   android:textStyle="bold"
                   android:textSize="16sp"
                   android:layout_margin="5dp"
                   android:textColor="@color/confirmed_text"/>

               <TextView
                   android:id="@+id/inc_c_tv"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/confirmed_text"
                   android:textSize="12sp"
                   android:drawableTint="@color/confirmed_text"
                   android:drawablePadding="2dp"
                   android:drawableStart="@drawable/ic_baseline_arrow_upward_24"
                   />

               <TextView
                   android:id="@+id/c_cases_tv"
                   android:layout_width="wrap_content"
                   android:textSize="16sp"
                   android:layout_margin="5dp"
                   android:textColor="@color/confirmed_text"
                   android:layout_height="wrap_content"
                   />


           </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:contentPadding="4dp"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Cases"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/active_text"/>

                <TextView
                    android:id="@+id/inc_a_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/active_text"
                    android:textSize="12sp"
                    android:drawableTint="@color/active_text"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_baseline_arrow_upward_24"
                    />

                <TextView
                    android:id="@+id/a_cases_tv"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/active_text"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                android:layout_margin="5dp"
                app:contentPadding="4dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recovered Cases"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/recovered_text"/>

                    <TextView
                        android:id="@+id/inc_r_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/recovered_text"
                        android:textSize="12sp"
                        android:drawableTint="@color/recovered_text"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_baseline_arrow_upward_24"
                        />

                    <TextView
                        android:id="@+id/r_cases_tv"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/recovered_text"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_background"
                android:layout_margin="5dp"
                app:contentPadding="4dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                android:layout_weight="1"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deceased Cases"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/deceased_text"/>

                    <TextView
                        android:id="@+id/inc_d_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/deceased_text"
                        android:textSize="12sp"
                        android:drawableTint="@color/deceased_text"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_baseline_arrow_upward_24"
                        />

                    <TextView
                        android:id="@+id/d_cases_tv"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:layout_margin="5dp"
                        android:textColor="@color/deceased_text"
                        android:layout_height="wrap_content"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

   <EditText
       android:id="@+id/state_et"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_marginRight="10dp"
       android:layout_marginLeft="10dp"
       android:padding="10dp"
       android:layout_below="@id/l_1"
       android:background="@drawable/search"
       android:drawableStart="@drawable/ic_baseline_search_24"
       android:drawablePadding="4dp"
       android:elevation="20dp"
       android:hint="Enter State Name"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/state_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/state_et"/>


</RelativeLayout>